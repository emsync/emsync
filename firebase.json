{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/users",
        "function": "api"
      },
      {
        "source": "/user",
        "function": "api"
      },
      {
        "source": "/album",
        "function": "api"
      },
      {
        "source": "/song",
        "function": "api"
      },
      {
        "source": "/login",
        "function": "api"
      },
      {
        "source": "/callback",
        "function": "api"
      },
      {
        "source": "/refresh_token",
        "function": "api"
      },
      {
        "source": "**",
        "function": "/index.html"
      }
    ]
  },
  "functions": {}
}
